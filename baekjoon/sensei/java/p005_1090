import java.io.*;
import java.util.*;

public class Main {
    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in)); // scanner 대신 사용하기
        StringTokenizer st; // 모든 입력을 문자열로 받은 후 XXX.parseXXX(st)로 변환하기

        List<Pos> posList = new ArrayList<>();
        List<Integer> xposList = new ArrayList<>();
        List<Integer> yposList = new ArrayList<>();

        int n = Integer.parseInt(br.readLine());

        for (int i = 0; i < n; i++) {
            st = new StringTokenizer(br.readLine()); // 한 줄 전체를 읽은 뒤, 공백(" ")을 기준으로 단어(토큰) 단위로 분리해 st에 저장

            int x = Integer.parseInt(st.nextToken());
            int y = Integer.parseInt(st.nextToken());

            xposList.add(x);
            yposList.add(y);
            posList.add(new Pos(x, y));
        }

        // 결과 저장
        int[] ret = new int[n];
        Arrays.fill(ret, -1); // 배열 원소 초기화

        // 최소 거리 계산을 위한 배열 dist
        int[] dist = new int[n];

        for (int x : xposList) {
            for (int y : yposList) {
                for (int i = 0; i < n; i++) {
                    Pos p = posList.get(i);
                    dist[i] = Math.abs(p.x - x) + Math.abs(p.y - y);
                }

                Arrays.sort(dist); // 오름차순 정렬

                int temp = 0;

                for (int i = 0; i < n; i++) {
                    temp += dist[i];

                    if (ret[i] == -1) {
                        ret[i] = temp;
                    } else {
                        ret[i] = Math.min(ret[i], temp);
                    }
                }
            }
        }

        StringBuilder sb = new StringBuilder(); // 문자열로 합쳐서 출력하기

        for (int val : ret) {
            sb.append(val).append(' ');
        }

        System.out.println(sb);
    }

    static class Pos {
        int x, y;

        Pos(int x, int y) {
            this.x = x;
            this.y = y;
        }
    }
}
